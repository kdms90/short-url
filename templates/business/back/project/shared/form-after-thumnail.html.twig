<div class="card">
    {% if form.afterThumbnail.vars.errors|length %}
        <div class="has-error">{{ form_errors(form.afterThumbnail) }}</div>
    {% endif %}
    {% set dropClass = '' %}
    {% set dropStyle = '' %}
    {% if item is not null and item.afterThumbnail is not null and item.afterThumbnail.imageExists %}
        {% set dropClass = 'hasImage' %}
        {% set dropStyle = 'background-image: url('~asset(item.afterThumbnail.webPath)~');' %}
    {% endif %}
    <div class="card-body-c preview">
        <div class="dropzone imageHolder {{ dropClass }}" style="{{ dropStyle }}">
            <div class="u--xxs-dn v-tac text-center">
                <i class="dropzone__icon download ik ik-download"></i>
                <p class="dropzone__message mb-0">
                    <strong>DÃ©finissez une image</strong>
                    <span class="d-block">Elle sera mise en avant</span>
                </p>
            </div>
        </div>
        <p class="d-none">{{ form_label(form.afterThumbnail) }}</p>
        <div class="d-none file-input">
            {{ form_widget(form.afterThumbnail) }}
        </div>
    </div>
</div>
