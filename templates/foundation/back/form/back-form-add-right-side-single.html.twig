{% block beforeFrom %}{% endblock %}
{{ form_start(form, {attr: {novalidate: 'novalidate', class:'form-w mx-auto '~formClass}}) }}
<div class="row form-card no-gutters">
    <div class="col-md-9 col-12">
        <div class="main-form-card pt-0">
            <div class="row form-main-input-title content-form-item">
                <div class="col-md-12">
                    {% block headerInputs %}{% endblock %}
                </div>
            </div>
            {% block afterHeaderInputs %}{% endblock %}
            <div class="row">
                <div class="col-md-12">
                    <div class="content-form-item">
                        <ul class="nav nav-tabs" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" data-toggle="tab" href="#infos">{% block defaultTabTitle %}{{ 'Essentiel'|trans({}, 'core') }}{% endblock %}</a>
                            </li>
                            {% block additionnalTabHeader %}{% endblock %}
                        </ul>
                        <!-- Tab panes -->
                        <div class="tab-content">
                            <div id="infos" class="tab-pane active">
                                {% block tabBody %}{% endblock %}
                            </div>
                            {% block additionnalTabContent %}{% endblock %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-12 left-form-side">
        <div class="form-card-side">
            {% block sideCard %}{% endblock %}
        </div>
    </div>
</div>
{{ form_rest(form) }}
{{ form_end(form) }}
