{% extends 'foundation/back/back.html.twig' %}
{% block body_class %}form{% endblock %}
{% block initApp %}{% endblock %}
{% block back %}
    {% block beforeFrom %}{% endblock %}
    {{ form_start(form, {attr: {novalidate: 'novalidate', class:'form-w mx-auto'}}) }}
    <div class="row form-card no-gutters">
        <div class="col-12">
            <div class="main-form-card pt-0">
                <div class="row form-main-input-title content-form-item">
                    <div class="col-md-12">
                        {% block headerInputs %}{% endblock %}
                    </div>
                </div>
                {% block afterHeaderInputs %}{% endblock %}
                <div class="row">
                    <div class="col-md-12">
                        <div class="content-form-item">
                            <ul class="nav nav-tabs" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" data-toggle="tab" href="#infos">{{ 'Essentiel'|trans({}, 'core') }}</a>
                                </li>
                                {% block additionnalTabHeader %}{% endblock %}
                            </ul>
                            <!-- Tab panes -->
                            <div class="tab-content" style="min-height: 350px">
                                <div id="infos" class="tab-pane active">
                                    {% block tabBody %}{% endblock %}
                                </div>
                                {% block additionnalTabContent %}{% endblock %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}