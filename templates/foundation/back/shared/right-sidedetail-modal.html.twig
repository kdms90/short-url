<div id='right-more-details' class="right-more-details">
    <div class="x_panel">
        <div class="row">
            <div class="col-md-6">
                <h2 class="more-details-title">{% if data.title %}{{ data.title }}{% else %}Plus de details{% endif %}</h2>
            </div>
            <div class="col-md-6">
                <span class="pull-right close-more-details"><i class="ion-ios-close"></i></span>
            </div>
        </div>
        <div class="col-md-12">
            {{ data.content | raw }}
        </div>
        <div class="col-md-12 margin-top-30">
            <button type="submit" class="btn-sm btn btn-success apply-filters close-more-details">
                {{ 'button.close'|trans({}, 'core') }}
            </button>
        </div>
    </div>
</div>