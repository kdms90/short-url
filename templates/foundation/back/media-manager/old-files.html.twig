{% for file in oldFiles %}
    <div class="file-box">
        <div class="file">
            <a href="#">
                <span class="corner hide"><i class="ion-checkmark"></i></span>
                <div class="image">
                    {% if file.imageExists or 1 %}
                        <img alt="image" class="img-responsive" src="{{ absolute_url(asset(file.webPath)) }}">
                    {% else %}
                        <img class="profile-user-img img-responsive img-bordered profile-pic"
                             src="{{ absolute_url(asset('assets/images/mk-mailer/empty-image.svg')) }}"/>
                    {% endif %}
                </div>
                <div class="file-name">
                    {{ file.filename }}
                    <br>
                    <small class="color-green">{{ 'created_on'|trans({}, 'external') }} {{ file.dateAdd|localizeddate }}</small>
                </div>
            </a>

        </div>
    </div>
{% endfor %}