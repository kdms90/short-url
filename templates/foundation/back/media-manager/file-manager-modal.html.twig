<div class="modal fade file-manager-modal" id="file-manager-modal" tabindex="-1" role="dialog"
     aria-labelledby="templateEmailFileManager"
     aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header main-header">
                <h4 class="modal-title" id="templateEmailFileManager">Gestionnaire de fichiers</h4>
            </div>
            <div id="old-files-container">
                <div class="modal-body profile-consultant-modal-body-wrap">
                    <div class="project-members-container project-members" id="project-members-container">
