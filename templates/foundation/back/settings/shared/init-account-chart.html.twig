<h2>Plan comptable : Comptes</h2>
<div class="row mt16 apps_container all-w">
    {% for i in 1..9 %}
        <div class="col-12 col-lg-4 app_box">
            <div class="app_left_pane">{{ i }}.</div>
            <div class="app_right_pane">
                <span class="o_form_label">Installation des classes comptables de base</span>
                <div class="text-muted">
                    Installer les comptes de la classe {{ i }}
                </div>
                <div class="content-group">
                    <div class="row mt16">
                        <div class="o_field_widget col-lg">
                            {% if charts[i] is defined and charts[i] >0 %}
                                <p class="color-green"><i class="ik ik-check-circle"></i> Install√©</p>
                            {% else %}
                                <button data-action="{{ path('app_back_foundation_init_app_accounting_acounts_ajax',{'class':'class-'~i }) }}"
                                        class="run-app-initialisation o_form_label btn btn-sm btn-outline-secondary w-100">
                                    Installer
                                </button>
                            {% endif %}
                        </div>
                        <label class="o_form_label col-lg-5 o_light_label"></label>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
</div>