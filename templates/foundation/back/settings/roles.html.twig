{% extends 'foundation/back/back.html.twig' %}
{% block title %}{{pageTitle}}{% endblock %}
{% block back %}
    <div class="pl-3 mt-2">
        <h2 class="current-page-title">
            {{ pageTitle }}
        </h2>
        <p>Définissez l'ensemble des actions des utilisateurs</p>
    </div>
    <div id="setting-page" class="px-3">
        <div class="row">
            <div class="col-md-4 d-flex align-items-stretch">
                <div class="card">
                    <div class="card-header">
                        <h2>Droits d'accès aux lieux
                            <small>Module localisation</small>
                        </h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="card-body">
                        <article class="media event">
                            <a class="pull-left date" href="{{ path('app_location_back_role_add') }}">
                                <p class="month">Ajouter</p>
                                <p class="day"><i class="ik ik-plus"></i></p>
                            </a>
                            <div class="media-body">
                                <p>Gérer les droits d'accès à la gestion des organisation, pays, villes, ...</p>
                                <a class="config-link" href="{{ path('app_location_back_roles') }}">Tous les
                                    droits d'accès</a>
                            </div>
                        </article>
                    </div>
                </div>
            </div>
            <div class="col-md-4 d-flex align-items-stretch">
                <div class="card">
                    <div class="card-header">
                        <h2>Droits d'accès aux acteurs
                            <small>Module utilisateur</small>
                        </h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="card-body">
                        <article class="media event">
                            <a class="pull-left date" href="{{ path('app_user_back_role_add') }}">
                                <p class="month">Créer</p>
                                <p class="day"><i class="ik ik-plus"></i></p>
                            </a>
                            <div class="media-body">
                                <p>Gérer les droits d'accès aux acteurs de la plateforme</p>
                                <a class="config-link" href="{{ path('app_user_back_roles') }}">Tous les droits d'accès</a>
                            </div>
                        </article>
                    </div>
                </div>
            </div>
            {% if is_granted('CAN_VIEW_BLOG_ROLE') %}
                <div class="col-md-4 d-flex align-items-stretch">
                    <div class="card">
                        <div class="card-header">
                            <h2>Droits d'accès au module blog
                                <small>Module Blog</small>
                            </h2>
                            <div class="clearfix"></div>
                        </div>
                        <div class="card-body">
                            <article class="media event">
                                <a class="pull-left date" href="{{ path('app_blog_back_role_add') }}">
                                    <p class="month">Ajouter</p>
                                    <p class="day"><i class="ik ik-plus"></i></p>
                                </a>
                                <div class="media-body">
                                    <p>Gérer les droits d'accès à la gestion des articiles, slides, catégories, ...</p>
                                    <a class="config-link" href="{{ path('app_blog_back_roles') }}">Tous les
                                        droits d'accès</a>
                                </div>
                            </article>
                        </div>
                    </div>
                </div>
            {% endif %}
            {% if is_granted('CAN_VIEW_BUSINESS_ROLE') %}
                <div class="col-md-4 d-flex align-items-stretch">
                    <div class="card">
                        <div class="card-header">
                            <h2>Droits d'accès au module business
                                <small>Module Business</small>
                            </h2>
                            <div class="clearfix"></div>
                        </div>
                        <div class="card-body">
                            <article class="media event">
                                <a class="pull-left date" href="{{ path('app_business_back_role_add') }}">
                                    <p class="month">Ajouter</p>
                                    <p class="day"><i class="ik ik-plus"></i></p>
                                </a>
                                <div class="media-body">
                                    <p>Gérer les droits d'accès à la gestion des services, projets, l'équipe, ...</p>
                                    <a class="config-link" href="{{ path('app_business_back_roles') }}">Tous les
                                        droits d'accès</a>
                                </div>
                            </article>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
