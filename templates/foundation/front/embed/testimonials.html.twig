<section class="testimonials-one">
    <div class="container">
        <div class="section-title text-center">
            <span class="section-title__tagline">{{'text.our_testimonials' | trans([], 'core')}}</span>
            <h2 class="section-title__title">{{'text.our_testimonials_saying' | trans([], 'core')}}</h2>
        </div>
        {% if entities|length == 0 %}
            <div class="section-title text-center">
                <span class="section-title__tagline"><i class="fas fa-exclamation-triangle"></i> {{'text.element_sorry' | trans([], 'core')}}</span>
                <h2 class="section-title__title">{{'text.element_empty' | trans([], 'core')}}</h2>
            </div>
        {% endif %}
        <div class="row">
            <div class="col-xl-12">
                <div class="testimonials-one__carousel owl-theme owl-carousel">
                    <!--Testimonials One Single-->
                    {% for item in entities %}
                        {% include 'blog/front/testimonial/shared/single.html.twig' with {'item':item} %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</section>
