<div id="geoLocPopUp" class="userPrompt animated fadeInDown d-none">
    <div class="contentPrompt">
        <p class="caption"><i class="ion-android-alert"></i> <span class="text"></span></p>
        <p class="desc"></p>
    </div>
    <div class="pull-right">
        {#<span id="block" class="geoLocBtn decline">Later</span>#}
        <span id="allow" class="geoLocBtn decline">OK</span>
    </div>
</div>
<span id="loader" class="d-none"><img src="{{ asset('css/img/app-loader.gif') }}"/></span>

{% set messages = app.session.flashbag.get('notify') %}
{% if messages|length > 0 %}
    {% set titles = app.session.flashbag.get('notifyTitle') %}
    <div id="notifyBox" class="d-none" data-show-alert="{% if messages|length > 0 %}1{% else %}0{% endif %}">
        <span class="caption">
            {% for title in titles %}
                {{ title }}
            {% endfor %}
        </span>
        <span class="desc">
            {% for message in messages %}
                {{ message }}
            {% endfor %}
        </span>
    </div>
{% endif %}

