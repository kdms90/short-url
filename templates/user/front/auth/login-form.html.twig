<div class="login-container">
    <div class="clearfix"></div>
    <form action="{{ path("app_user_front_login") }}" method="post" class="authentication-form" novalidate="novalidate">
        <div class="text-left login-status">
            <a href="{{ path('app_user_front_login') }}" class="">Connexion</a>
            <a href="{{ path('app_user_front_access_request') }}"
               class="active">Inscription</a>
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% if error %}
            <p class="alert alert-danger"><i class="ik ik-alert-circle"></i> {{ error.messageKey|trans(error.messageData, 'security') }}
            </p>
        {% endif %}
        <div class="form-group">
            <input type="text" class="form-control" id="username" name="_username"
                   value="{{ last_username }}" placeholder="{{ 'form.email'|trans({},'security') }}" >
            <i class="ik ik-user"></i>
        </div>
        <div class="form-group">
            <input placeholder="{{ 'security.login.password'|trans({},'security') }}" type="password" id="password"
                   name="_password" required="required" class="form-control"/>
            <i class="ik ik-lock"></i>
        </div>
        <div class="row">
            <div class="col-12 col-md-5 text-md-left">
                <label class="custom-control custom-checkbox pl-0" style="font-size: 13px;">
                    <input type="checkbox" id="item_checkbox" name="_remember_me" value="on"
                           class="custom-control-input"/>
                    <span class="custom-control-label">{{ 'security.login.remember_me'|trans({},'security') }}</span>
                </label>
            </div>
            <div class="col-12 col-md-7 text-md-right">
                <a href="#">{{ 'security.login.forgot_password'|trans({}, 'security') }}</a>²
            </div>
        </div>
        <div class="sign-btn text-center">
            <button class="btn btn-primary w-100" name="_submit"
                    value="{{ 'security.login.submit'|trans({},'security') }}">{{ 'security.login.submit'|trans({},'security') }}</button>
        </div>
        <div class="text-center mt-4">
            <a href="{{ path('app_foundation_front_homepage') }}" class="text-decoration-none">
                <span class="text-center size18">Retourner à l'accueil</span>
            </a>
        </div>
    </form>
</div>
